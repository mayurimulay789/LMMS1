# Server Configuration for Development
PORT=2000
NODE_ENV=development

# Database (use your development MongoDB URL)
MONGODB_URI=mongodb://localhost:27017/lmms-development

# JWT Configuration (use development secrets)
JWT_SECRET=development-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# Client URL for CORS (development)
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email Configuration (use development/test settings)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-dev-email@gmail.com
EMAIL_PASS=your-dev-app-password

# Cloudinary Configuration (use development account)
CLOUDINARY_CLOUD_NAME=your-dev-cloud-name
CLOUDINARY_API_KEY=your-dev-api-key
CLOUDINARY_API_SECRET=your-dev-api-secret

# Payment Gateway Configuration (test keys)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=rzp_test_your_key_secret